{
    "version": 2,
    "name": "acsolution",
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/health",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "JWT_EXPIRES_IN": "7d",
        "CORS_ORIGIN": "*"
    },
    "functions": {
        "server.js": {
            "maxDuration": 30
        }
    }
}